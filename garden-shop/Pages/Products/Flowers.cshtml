@page
@model garden.Pages.Products.FlowersModel
@{
    ViewData["Title"] = "Flowers";
}
<!DOCTYPE html>
<html>
<head>
    <title>Flower Shop</title>
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Flowers</h1>
    <div class="product-card">
            <div class="card">
                <img src="/images/roses.jpg" alt="Flower 1">
                <h5 class="card-title">Roses</h5>
                <p class="card-price">€2.99</p>
                <button class="add-to-cart" data-name="Roses" data-price="2.99">Add to Cart</button>
            </div>
            <div class="card">
                <img src="/images/tulips.jpeg" alt="Flower 2">
                <h5 class="card-title">Tulips</h5>
                <p class="card-price">€1.99</p>
                <button class="add-to-cart" data-name="Tulips" data-price="1.99">Add to Cart</button>
            </div>
            <div class="card">
                <img src="/images/lilies.webp" alt="Flower 3">
                <h5 class="card-title">Lilies</h5>
                <p class="card-price">€2.49</p>
                <button class="add-to-cart" data-name="Lilies" data-price="2.49">Add to Cart</button>
            </div>
            <div class="card">
                <img src="/images/funflowers.jpg" alt="Flower 4">
                <h5 class="card-title">Sunflowers</h5>
                <p class="card-price">€1.49</p>
                <button class="add-to-cart" data-name="Sunflowers" data-price="1.49">Add to Cart</button>
            </div>

        <!-- Add more flower cards with the same structure -->
    </div>
    </div>
 
</body>
</html>
